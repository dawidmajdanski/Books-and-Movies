<aura:component description="BM_OrderDelivery" controller="BM_OrderController"
                implements="forceCommunity:availableForAllPageTypes" access="global">
    <aura:attribute type="User" name="user" />
    <aura:attribute type="Boolean" name="showPage" default="false"/>
    <aura:attribute type="Boolean" name="isBillingSameAsShipping" default="false"/>
    <aura:attribute type="String" name="shippingStreet" />
    <aura:attribute type="String" name="shippingCity" />
    <aura:attribute type="String" name="shippingPostal" />
    <aura:attribute type="String" name="shippingState" />
    <aura:attribute type="String" name="shippingCountry" />
    <aura:handler name="init" value="{!this}" action="{!c.init}"/>

    <aura:if isTrue="{!v.showPage}">
        <div class="deliveryInfoContainer">
            <div class="billingAddressContainer">
                <fieldset class="slds-form-element slds-form-element_compound slds-form-element_address">
                    <legend class="slds-form-element__legend slds-form-element__label">Your billing address</legend>
                    <div class="slds-form-element__control">
                        <div class="slds-form-element__row">
                            <div class="slds-size_1-of-1">
                                <div class="slds-form-element">
                                    <label class="slds-form-element__label" for="form-element-id-04">Billing Street</label>
                                    <div class="slds-form-element__control">
                                        <textarea id="form-element-id-04" required="" class="slds-textarea">{!v.user.Street}</textarea>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="slds-form-element__row">
                            <div class="slds-size_4-of-6">
                                <div class="slds-form-element">
                                    <label class="slds-form-element__label" for="form-element-id-05">Billing City</label>
                                    <div class="slds-form-element__control">
                                        <input type="text" id="form-element-id-05" required="" class="slds-input" value="{!v.user.City}" />
                                    </div>
                                </div>
                            </div>
                            <div class="slds-size_2-of-6">
                                <div class="slds-form-element">
                                    <label class="slds-form-element__label" for="form-element-id-06">Billing State/Province</label>
                                    <div class="slds-form-element__control">
                                        <input type="text" id="form-element-id-06" required="" class="slds-input" value="{!v.user.State}" />
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="slds-form-element__row">
                            <div class="slds-size_4-of-6">
                                <div class="slds-form-element">
                                    <label class="slds-form-element__label" for="form-element-id-07">Billing Zip/Postal Code</label>
                                    <div class="slds-form-element__control">
                                        <input type="text" id="form-element-id-07" required="" class="slds-input" value="{!v.user.PostalCode}" />
                                    </div>
                                </div>
                            </div>
                            <div class="slds-size_2-of-6">
                                <div class="slds-form-element">
                                    <label class="slds-form-element__label" for="form-element-id-08">Billing Country</label>
                                    <div class="slds-form-element__control">
                                        <input type="text" id="form-element-id-08" required="" class="slds-input" value="{!v.user.Country}" />
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </fieldset>
            </div>
            <div class="shippingAddressContainer">
                <fieldset class="slds-form-element slds-form-element_compound slds-form-element_address">
                    <legend class="slds-form-element__legend slds-form-element__label">Shipping address</legend>
                    <div class="slds-form-element__control">
                        <div class="slds-form-element__row">
                            <div class="slds-size_1-of-1">
                                <div class="slds-form-element">
                                    <label class="slds-form-element__label" for="form-element-id-04">Shipping Street</label>
                                    <div class="slds-form-element__control">
                                        <textarea id="shipping-street" class="slds-textarea" onblur="{!c.setShippingStreet}"></textarea>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="slds-form-element__row">
                            <div class="slds-size_4-of-6">
                                <div class="slds-form-element">
                                    <label class="slds-form-element__label" for="form-element-id-05">Shipping City</label>
                                    <div class="slds-form-element__control">
                                        <input type="text" id="shipping-city" class="slds-input" value="{!v.shippingCity}" onblur="{!c.setShippingCity}"/>
                                    </div>
                                </div>
                            </div>
                            <div class="slds-size_2-of-6">
                                <div class="slds-form-element">
                                    <label class="slds-form-element__label" for="form-element-id-06">Shipping State/Province</label>
                                    <div class="slds-form-element__control">
                                        <input type="text" id="shipping-state" class="slds-input" value="{!v.shippingState}" onblur="{!c.setShippingState}"/>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="slds-form-element__row">
                            <div class="slds-size_4-of-6">
                                <div class="slds-form-element">
                                    <label class="slds-form-element__label" for="form-element-id-07">Shipping Zip/Postal Code</label>
                                    <div class="slds-form-element__control">
                                        <input type="text" id="shipping-postal" class="slds-input" value="{!v.shippingPostal}" onblur="{!c.setShippingPostal}"/>
                                    </div>
                                </div>
                            </div>
                            <div class="slds-size_2-of-6">
                                <div class="slds-form-element">
                                    <label class="slds-form-element__label" for="form-element-id-08">Shipping Country</label>
                                    <div class="slds-form-element__control">
                                        <input type="text" id="shipping-country" class="slds-input" value="{!v.shippingCountry}" onblur="{!c.setShippingCountry}"/>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </fieldset>
            </div>
            <div class="shippingCheckboxTop"></div>
                <div class="shippingCheckboxInner" >
                    <lightning:input onchange="{!c.handleSetShippingAddress}" type="checkbox" label="Set billing address as shipping" value="{!c.isBillingSameAsShipping}"/>
                </div>
            <div class="shippingCheckboxBottom" ></div>
            <div class="summaryButtonContainer">
                <button id="proceedToSummary" style="transition: 0.7s" onclick="{!c.handleGoToOrderSummary}" class="slds-button slds-button_success proceedBtn">Proceed to order summary</button>
            </div>
        </div>
    </aura:if>
</aura:component>